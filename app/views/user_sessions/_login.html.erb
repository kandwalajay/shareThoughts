<h4>Login To your Account</h4>
<div class = "error" id = "error_login"  style = "color:red; padding-bottom: 3%;"></div>
<% @session = UserSession.new %>
<%= form_for @session, :url => {:controller => "user_sessions", :action => "login"}, :method => "get", :onSubmit => "return checkLogin();",:remote => true do |form| %>
    <span class="input input--sae">
      <%= form.text_field :email, :class => "input__field input__field--sae", :id => "input-17 email" %>
      <div class = "error" id = "email_error" style = "color:red;"></div>
      <label class="input__label input__label--sae" for="input-17">
        <span class="input__label-content input__label-content--sae">Username</span>
      </label>
	</span>
    <span class="input input--sae">
      <%= form.password_field :password, :class => "input__field input__field--sae", :id => "input-17 password" %>
      <div class = "error" id = "pass_error" style = "color:red;"></div>
      <label class="input__label input__label--sae" for="input-17">
        <span class="input__label-content input__label-content--sae">Password</span>
      </label>
	</span>
    <span class="forgot-pass-text">
	  <a onclick="" tabindex="0">Forgot Password? / Create a new password</a>
	</span>
    <input id="cb1" name="remberme" type="checkbox"><label for="cb1">Rember me</label>
    <%= form.submit "Sign In", :class => "submit" %>
<% end %>
