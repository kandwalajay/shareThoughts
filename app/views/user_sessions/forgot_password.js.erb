<% if @status == "Success"%>
$('#forgot_password_form_div').replaceWith("<%= escape_javascript(render :partial=>'shared/go_to_email', :locals => {:email => @user.email}) %>");
$('#forgot_password_error').css({'color': 'green'});
$('#forgot_password_error').html("Successfully send the Reset Password Link to your email <%= @user.email %>");
<% else %>
$('#forgot_password_error').show();
$('#forgot_password_error').css({'color': 'red'});
$('#forgot_password_error').html("There is no record associated with '<%= params[:email] %>' email in our database. ");
<% end %>